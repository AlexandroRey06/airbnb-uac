<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Hotel Auth Service</display-name>

    <!-- Rol Controller -->
    <servlet>
        <servlet-name>RolController</servlet-name>
        <servlet-class>com.hotel.controller.RolController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RolController</servlet-name>
        <url-pattern>/api/roles/*</url-pattern>
    </servlet-mapping>

    <!-- Usuario Controller -->
    <servlet>
        <servlet-name>UsuarioController</servlet-name>
        <servlet-class>com.hotel.controller.UsuarioController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioController</servlet-name>
        <url-pattern>/api/usuarios/*</url-pattern>
    </servlet-mapping>

    <!-- Error Handler -->
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error-handler</location>
    </error-page>

    <!-- CORS Filter -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.hotel.filter.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- JWT Filter -->
    <filter>
        <filter-name>JwtFilter</filter-name>
        <filter-class>com.hotel.filter.JwtFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>JwtFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

<!-- Configuración de sesión -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Referencias a las bases de datos -->
    <resource-ref>
        <description>Primary Database Connection</description>
        <res-ref-name>jdbc/primaryDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <resource-ref>
        <description>Secondary Database Connection</description>
        <res-ref-name>jdbc/secondaryDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <context-param>
        <param-name>contextClass</param-name>
        <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </context-param>
</web-app>
